CREATE INDEX idx_eventcategories_event_category ON EventCategories (event_id, category_id);

CREATE UNIQUE INDEX idx_user_email ON "User" (email);

CREATE INDEX idx_ticket_event_user ON Ticket (event_id, user_id);

CREATE INDEX idx_eventschedule_event_startdate ON EventSchedule (event_id, start_date);

CREATE INDEX idx_activitylog_user_date ON ActivityLog (user_id, date);

CREATE INDEX idx_review_user_event ON Review (user_id, event_id);

CREATE INDEX idx_payment_user ON Payment (user_id);

CREATE INDEX idx_cart_user ON Cart (user_id);

